<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zwagii" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- Dark Mode / night Mode -->
    <style name="nightModeswitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
    </style>

    <!-- Notification -->
    <style name="notificationswitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notification</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
    </style>
    <!-- private account -->
    <style name="privateaccountswitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
    </style>

    <!-- light Mode-->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>
    <!-- TEXT BACKGROUND IF LIGHT MODE ON-->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>
    <!-- BUTTON BACKGROUND IF LIGHT MODE IS ON-->
    <style name="BUTTON">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>